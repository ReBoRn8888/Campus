<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical"
   >

	<RelativeLayout
		android:id="@+id/re1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="#57c1af"
			android:minHeight="?attr/actionBarSize">
			<ImageButton
				android:id="@+id/back"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:background="@drawable/back"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Toolbar Title"
				android:layout_gravity="center"
				android:textColor="#ffffff"
				android:textSize="22dp"
				android:id="@+id/toolbar_title" />
		</android.support.v7.widget.Toolbar>
		<Button
			android:id="@+id/comment"
			android:layout_width="wrap_content"
			android:layout_height="?attr/actionBarSize"
			android:text="点评"
			android:textColor="#272aed"
			android:textSize="20dp"
			android:background="#00000000"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

     <ScrollView
	 	android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 

	   <RelativeLayout
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent" >

		   <LinearLayout
			   android:id="@+id/info_detial"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:orientation="vertical"
			   android:layout_marginLeft="10dip"
			   android:layout_marginRight="10dip"
			   android:layout_marginTop="20dip"
			   android:background="@drawable/detail_bg" >

			   <TextView
				   android:id="@+id/title"
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:layout_marginLeft="10dip"
				   android:layout_weight="1.50"
				   android:gravity="center"
				   android:layout_marginTop="5dp"
				   android:text="品客一佳"
				   android:textColor="#000000"
				   android:textSize="30sp" />

			   <ImageView
				   android:id="@+id/imageView2"
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:layout_marginTop="10dip"
				   android:src="@drawable/listline" />

			   <LinearLayout
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:layout_marginTop="8dp"
				   android:layout_weight="1.50" >

				   <TextView
					   android:id="@+id/textView5"
					   android:layout_width="0dp"
					   android:layout_height="wrap_content"
					   android:layout_weight="1"
					   android:gravity="center"
					   android:text="人均消费:\n15元" />
			   </LinearLayout>

		   </LinearLayout>

           <LinearLayout
               android:id="@+id/bus_info_2"
               style="@style/some_used"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/info_detial"
               android:background="@drawable/detail_bg" >

		      <RelativeLayout android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="10dip"
		         android:layout_marginBottom="10dip"
		         >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="20dp"
		            android:src="@drawable/arrow_b" />
		
		       <LinearLayout android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:orientation="vertical">
		               <TextView
					        android:id="@+id/textView1"
					        android:layout_marginLeft="10dip"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="15sp"
					        android:textColor="#ff0000"
					        android:text="点评（10封）" />
					
					    <LinearLayout
					        android:id="@+id/linearLayout1"
					        android:layout_marginTop="10dip"
					        android:layout_marginLeft="10dip"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content" >
					
					        <TextView
					            android:id="@+id/textView2"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:textColor="#000000"
					            android:text="服务" />
					
					        <ImageView
					            android:id="@+id/imageView1"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="center_vertical"
					            android:src="@drawable/jdt_2" />
					
					        <TextView
					            android:id="@+id/textView3"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:text="80" />
					
					    </LinearLayout>
					    
					    <LinearLayout
					        android:id="@+id/linearLayout2"
					        android:layout_width="match_parent"
					         android:layout_marginTop="10dip"
					         android:layout_marginLeft="10dip"
					        android:layout_height="wrap_content" >
					
					        <TextView
					            android:id="@+id/textView4"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:textColor="#000000"
					            android:text="环境" />
					
					        <ImageView
					            android:id="@+id/imageView6"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="center_vertical"
					            android:src="@drawable/jdt_2" />
					
					        <TextView
					            android:id="@+id/textView7"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:text="93" />
					
					    </LinearLayout>
					    
					    <LinearLayout
					        android:id="@+id/linearLayout3"
					        android:layout_marginTop="10dip"
							android:layout_marginLeft="10dip"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content" >
					
					        <TextView
					            android:id="@+id/textView01"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:textColor="#000000"
					            android:text="口味" />
					
					        <ImageView
					            android:id="@+id/imageView07"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="center_vertical"
					            android:src="@drawable/jdt_2" />
					
					        <TextView
					            android:id="@+id/textView8"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:text="87" />
					
					    </LinearLayout>
		        </LinearLayout>
		    </RelativeLayout>
          </LinearLayout>       
	      <LinearLayout android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:background="@drawable/ta_bg"
	          android:id="@+id/bus_info_3"
	          android:layout_below="@id/bus_info_2"
	          android:orientation="vertical"
	           style="@style/some_used" >

	          <RelativeLayout
	              android:layout_width="match_parent"
	              android:layout_height="30dp" >

	              <TextView
	                  android:id="@+id/textView08"
	                  android:layout_width="wrap_content"
	                  android:layout_height="match_parent"
	                  android:layout_marginTop="5dp"
	                  android:text="商家信息"
	                  android:textSize="20dp" />

	              <Button
	                  android:id="@+id/map"
	                  android:layout_width="wrap_content"
	                  android:layout_height="match_parent"
	                  android:layout_alignParentRight="true"
	                  android:layout_alignParentTop="true"
	                  android:background="#ffffff"
	                  android:textSize="15dp"
	                  android:textColor="#ff6600"
	                  android:text="地图上的位置" />

	          </RelativeLayout>
	          
	          <ImageView
	        	android:id="@+id/zxc"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dip"
        		android:src="@drawable/listline" />

	          <TextView
	              android:id="@+id/textView9"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginTop="10dp"
	              android:text="营业时间：10:00-23:00" />
	          
	          <TextView
	              android:id="@+id/textView10"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginTop="10dp"
	              android:text="商家地址：xxxxxxxxxxx" />
	          
	          <TextView
	              android:id="@+id/textView11"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginTop="10dp"
	              android:text="由商家提供配送服务" />

          </LinearLayout>   
          
         <View android:layout_below="@id/bus_info_3" 
             android:layout_width="fill_parent"
             android:layout_height="100dip"
             android:background="#00000000"/>
	
	   </RelativeLayout>

    </ScrollView> 
   
</LinearLayout>