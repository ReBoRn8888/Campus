<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/home_buttons_1"
            style="@style/home_button_style"
            android:background="@drawable/deskclock" />
         <ImageButton
            android:id="@+id/home_buttons_2"
            style="@style/home_button_style"
            android:background="@drawable/fileexplorer" />
          <ImageButton
            android:id="@+id/home_buttons_3"
            style="@style/home_button_style"
            android:background="@drawable/fmradio" />
           <ImageButton
            android:id="@+id/home_buttons_4"
            android:background="@drawable/gallery"
            style="@style/home_button_style" />
        
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/home_buttons_5"
            style="@style/home_button_style"
            android:background="@drawable/maps"/>
         <ImageButton
            android:id="@+id/home_buttons_6"
            style="@style/home_button_style"
            android:background="@drawable/mms"/>
          <ImageButton
            android:id="@+id/home_buttons_7"
            style="@style/home_button_style"
            android:background="@drawable/monitor"/>
           <ImageButton
            android:id="@+id/home_buttons_8"
            style="@style/home_button_style"
            android:background="@drawable/videoeditor"/>
        
    </LinearLayout>
</LinearLayout>