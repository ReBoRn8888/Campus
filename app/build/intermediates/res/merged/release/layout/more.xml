<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">



    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/recommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/recommended" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/good"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/good" />

                    <ImageButton
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/news" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/some_used"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ta_bg" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/hamburger" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_b" />

                    <Button
                        android:id="@+id/food"
                        style="@style/some_used_button"
                        android:text="美食" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/some_used"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ta_bg" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip" >

                    <ImageView
                        android:id="@+id/asdfasdf"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/launcher" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_b" />

                    <Button
                        android:id="@+id/fun"
                        style="@style/some_used_button"
                        android:text="休闲娱乐" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/some_used"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ta_bg" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip" >

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/coffee" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_b" />

                    <Button
                        android:id="@+id/life"
                        style="@style/some_used_button"
                        android:text="生活服务" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
